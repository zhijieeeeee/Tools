<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--分享-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="分享到"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/xinlangweibo"
                android:gravity="bottom|center_horizontal"
                android:text="新浪微博"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/share_wxfriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/weixin"
                android:gravity="bottom|center_horizontal"
                android:text="微信好友"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/share_wxspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/pengyouquan"
                android:gravity="bottom|center_horizontal"
                android:text="朋友圈"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_qqfriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/qq"
                android:gravity="bottom|center_horizontal"
                android:text="QQ好友"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/share_qqspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/qqkongjian"
                android:gravity="bottom|center_horizontal"
                android:text="QQ空间"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/share_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/youjian"
                android:gravity="bottom|center_horizontal"
                android:text="短信"
                android:textColor="@android:color/black"
                android:visibility="invisible" />


        </LinearLayout>

        <Button
            android:id="@+id/share_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>